{
    "include": [
        "./src/*"
    ],
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "es6",
            "dom",
            "dom.iterable"
        ],
        "downlevelIteration": true,
        "types": [
            "reflect-metadata"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    }
}
